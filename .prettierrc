{
  "singleQuote": true,
  "plugins": ["prettier-plugin-astro"],
  "overrides": [
    {
      "files": ["*.md", "README"],
      "options": {
        "parser": "markdown-nocjsp",
        "printWidth": 80
      }
    },
    {
      "files": ["*.mdx"],
      "options": {
        "parser": "mdx-nocjsp",
        "printWidth": 80
      }
    },
    {
      "files": "*.astro",
      "options": {
        "parser": "astro"
      }
    }
  ]
}
